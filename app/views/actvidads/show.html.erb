<%= link_to 'Back', actvidads_path %>

      <div class="row actividad">

   <div class="row">
        
         
  <div class="col-md-3">
    <p><strong>Consecutivo:</strong> <%= @actvidad.codigo %></p>
  </div>
   <div class="col-md-3">
    <p><strong>Consecutivo:</strong> <%= get_date(@actvidad.created_at) %></p>
  </div>
  <div class="col-md-3">
    <p><strong>Prioridad: </strong><%= @actvidad.prioridad %></p>
  </div>
  <div class="col-md-3">
    <p><strong>Tipo:</strong> <%= @actvidad.tipo %></p>
  </div>
  </div>
  <hr class="hr">

 <div class="row">
    <div class="col-md-3">
    <p><strong>Estado:</strong> <%= get_estado(@actvidad.estado_cierre)%></p>
  </div>
  <div class="col-md-3">
    <p><strong>¿Enviada?:</strong> <%= @actvidad.estado_envio%> </p>
  </div>
    <div class="col-md-3">
    <p><strong>Avance:</strong> <%= @actvidad.porcentaje%> %</p>
      </div>
 
  <div class="col-md-3">
    <p><strong>Responsable:</strong> <%= @actvidad.responsable.nombres %> </p>
  </div>

    </div>

  <hr class="hr">

     <div class="row">
      <div class="col-md-3">
    <p><strong>Anexo:</strong> <%= link_to "Anexo", @actvidad.anexo_url %> </p>
  </div>
  <div class="col-md-3">
    <p><strong>Fecha de Entrega:</strong> <%= get_date(@actvidad.f_entrega) %></p>
  </div>


 
    <div class="col-md-6">
    <strong>Otros responsables:</strong> <%  @actvidad.users.each do |user| %>
    <%= user.nombres%> <%= user.apellidos%>,
    <%end%>
  </div>
   </div>

  <hr class="hr">

 <div class="row">

    <div class="col-md-4">
    <p><strong>Actividad: </strong><%= @actvidad.nombre%> </p>
  </div>
<div class="col-md-8">
    <strong>Descripción:</strong> <%==   @actvidad.descripcion %> 
  </div>
 </div>

    
  
</div>








<h3 class="text-center">Seguimientos (<%=@actvidad.seguimientos.count%>) <%= link_to 'Nuevo', new_seguimiento_path(@actvidad), remote:true, class:"btn btn-primary" %> 
 </h3>


<% @actvidad.seguimientos.each do |seg|%>
<div class="row actividad">
  <div class="col-md-3">
    <p><strong>Fecha:</strong> <%= seg.created_at %></p>
  </div>
  <div class="col-md-3">
    <p><strong>Responsable:</strong> <%= seg.user.nombres %> <%= seg.user.apellidos %></p>
  </div>
  <div class="col-md-3">
    <p><strong>% de Avance: </strong><%= seg.porcentaje %></p>
  </div>
  <div class="col-md-3">
    <p><strong>Anexo:</strong> <%= (link_to "Adjunto", seg.anexo_url) if seg.anexo_url %></p>
  </div>
 
  <div class="col-md-12">
    <p><strong>Descripción:</strong> <%= seg.descripcion %></p>
  </div>

    </div>

    <%end%>